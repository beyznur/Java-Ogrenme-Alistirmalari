<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sifreni Sifirla"
            android:textSize="21sp"
            android:layout_toLeftOf="@+id/customdialog_resetpass_imageView"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:textStyle="bold"
            android:id="@+id/customdialog_resetpass_textViewTitle"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/customdialog_resetpass_imageView"
            android:scaleType="fitXY"
            android:src="@drawable/ic_close"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="E-mail adresinizi Giriniz"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:id="@+id/customdialog_resetpass_editText"
        android:layout_marginTop="20dp"
        android:textAlignment="center"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Kapat"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/customdialog_resetpass_btnClose"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Sıfırla"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/customdialog_resetpass_btnResetPass"/>

    </LinearLayout>


</LinearLayout>